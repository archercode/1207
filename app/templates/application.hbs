
<div class="header fixed_component">
        <a class="logo">
          <img src="/logo.png"  class="img_logo" height="50" width="50"> 
        </a>
        {{#md-navbar}}

          <li class="navbar_border">{{#link-to 'products'}} Shop {{/link-to}}</li>
          <li class="navbar_border">{{#link-to 'blogs'}} Blogs {{/link-to}}</li>
          <li class="navbar_border">{{#link-to 'contact'}} Contact {{/link-to}}</li>
          <li>{{#link-to 'about'}} About {{/link-to}}</li>
          <li class="cart">
            <div class=" shopping-cart" {{action "showCartSummary" this}}>

              <img src="/ic_cart.png"  class="nav_icon" height="40" width="40">
              <div class="badge orange"> {{count}}</div>
            </div>
          </li>
        {{/md-navbar}}
         
    <div class="hover checkout_summary" >
      {{#if hasQuantity}}
        <div>
          <ul>
          {{#each item in model itemController='application'}}
            <li class="row"> 
              <div class="col s7">
              {{item.title}}
              </div>
              {{item.price}}
              <div class="col s3">
              {{item.quantity}}
              </div>

              <div class="col s2">
          <button {{action 'removeItem'}}>x</button>
              </div>
            </li>
          {{/each}}
          </ul>
        </div>
        Subtotal: {{subTotal}}
        {{#link-to 'checkout'}}
      <button>CHECKOUT</button>
        {{/link-to}}
      {{else}}
        <div>
          Your cart is empty. Add some goodies!
        </div>
      {{/if}}
    </div>
</div>

  <div class="main_container">
    {{md-modal-container}}
    {{ember-notify messageStyle='bootstrap'}}
    {{outlet}}
  </div>

<footer class='fixed_component'>
    <p class='pull-right'>Credits</p>
    {{#md-copyright text='Copyright Text' startYear=2014}}
                <a class="grey-text text-lighten-1 right" href="#!">More Links</a>
    {{/md-copyright}}
</footer>