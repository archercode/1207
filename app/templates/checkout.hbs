                        {{/if}} 
    </div>

     <div class="row checkout_input"> 
                <!-- <label>*Last name: </label>
                    {{input type="text" placeholder="Family name" value=newFamilyname class="form-control"}} -->
            <label class="col s4">Zip Code</label>
                    {{input value=zip label="Zip Code" class="col s8" placeholder="Zip Code"}}
                        {{#if errors.phone}}
                            <!-- <span class="error"><span class="glyphicon glyphicon-warning-sign"></span> {{errors.newFamilyname}}</span> -->
                        {{/if}}
     
    </div>

     <div class="row checkout_input">
                <!-- <label>*Last name: </label>
                    {{input type="text" placeholder="Family name" value=newFamilyname class="form-control"}} -->
            <label class="col s4">City</label>
                    {{input value=city label="City" class="col s8" placeholder="City"}}
                        {{#if errors.city}}
                            <!-- <span class="error"><span class="glyphicon glyphicon-warning-sign"></span> {{errors.newFamilyname}}</span> -->
                        {{/if}}
            
    </div>
    <div class="row checkout_input ">
                <!-- <label>*Last name: </label>
                    {{input type="text" placeholder="Family name" value=newFamilyname class="form-control"}} -->
            <label class="col s4">State/Province</label>
                    {{input value=state label="State/Province" class="col s8" placeholder="State/Province"}}
                        {{#if errors.state}}
                            <!-- <span class="error"><span class="glyphicon glyphicon-warning-sign"></span> {{errors.newFamilyname}}</span> -->
                        {{/if}}
    </div>

     <div class="row checkout_payment_method">

            <div class="row checkout_title col s12">
                Payment Method
            </div>

        {{md-radios
            class='payment_method'
            selection=selectedVal
            content=radioSelection
            optionValuePath='value'
            optionLabelPath='label'}}

       <!--      {{md-radios
        selection=radioSelection
        content=radioChoices
        optionValuePath='id'
        optionLabelPath='text'}} -->



            <div class="row col s12 checkout_payment_data" >
                
                {{#if optionBank }}
                <div class="alert alert-info" role="alert"> 
                    Shipping is through LBC. An additional of P150 will be charge on top of the total amount. Kindly ask me for the bank details. Thank you. 
                </div>
              {{/if}}

              {{#if optionMeet }}

              <div class="alert alert-info" role="alert"> 
                    Let's schedule for a meet up. Kindly contact me at 0905-575-3988/0998-469-2148. Thank you. 
                </div>
              {{/if}}

                {{#if optionPayP }}
                    
                <div class="alert alert-info" role="alert"> 
                    Just a heads up!
                    After clicking the button below you will be redirected to PayPal to authorize the payment. Be sure to complete the process or your order will not be processed successfully.
                </div>
                {{/if}}
            </div>
    </div>


</div>
</div> 
  <div class="col m1">
  </div>
    <div class="col m5 ">
    {{#if sub}}

        <div class="row checkout_order thumbnail fixed_component"> 

            
            <div class="row checkout_title checkout_input">
               Order Summary
            </div>

            <ul class=" checkout_order_list checkout_input row">




                <li class="row">

                <div class="col s6"><label>Item</label></div>
                <div class="col s2"><label>Price</label></div>
                <div class="col s1"><label>#</label></div>
                <div class="col s2"><label> </label></div>

                </li> 

            {{#each item in model itemController = 'checkout'}}

                <li class="row">

                <div class="col s6">{{item.title}}</div>
                <div class="col s2">{{item.price}}</div>
                <div class="col s1">{{item.quantity}}</div>
                <div class="col s2">{{item.subtotal}}</div>
                <button class="col s1 close" {{action 'removeItem'}}>&times;</button>

                </li> 
            {{/each}}
            </ul>
            <div class="row col s12 checkout_total">
            <div class="col s6 left-align">
            <label>Total</label>
            </div>
            <div class="col s5 right-align checkout_title text_green">
            <strong>P {{subTotal}}</strong>
            </div>   

            <div class="col m1 right-align">

            </div>
            </div>

        </div>


{{/if}}
       
    </div>
</div>
<div class="row">
        <button type="submit" class="btn btn-primary btn-whole footer col m6" {{bind-attr disabled='isInvalid'}}{{action 'processOrder'}}>PLACE ORDER</button>
</div>

{{outlet}}
</div>