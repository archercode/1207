    </div>

     <div class="row checkout_input">
                <!-- <label>*Last name: </label>
                    {{input type="text" placeholder="Family name" value=newFamilyname class="form-control"}} -->

            <label class="col s4">Address</label>
                    {{input value=streetAddress label="Street Address" class="col s8" placeholder="Street Address"}}
                        {{#if errors.streetAddress}}
                            <!-- <span class="error"><span class="glyphicon glyphicon-warning-sign"></span> {{errors.newFamilyname}}</span> -->
                        {{/if}}
        
    </div>

     <div class="row checkout_input">
                <!-- <label>*Last name: </label>
                    {{input type="text" placeholder="Family name" value=newFamilyname class="form-control"}} -->
            <label class="col s4">Apt, suite, etc.</label>
                    {{input value=streetAddress2 label="Street Address 2" class="col s8" placeholder="Apt, suite, etc."  autofocus=false}}
                        {{#if errors.streetAddress2}}
