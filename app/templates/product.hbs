<div class="row">
	<div class="col s5">
	    <img {{bind-attr src='image'}} class='img-thumbnail'/>
	</div>
	<div class="col s7">
		<div class="product_title">
	 		{{title}}
	 	</div>
	 	<div class="badge text-uppercase">
	 		{{type}}
	 	</div>

	 	<div class="row">

	 		<div class="col m4 row checkout_total">

				{{#if itemsCount}}
					{{md-btn text='-' action='minusItem'  class='col m6'
						isDisabled = false iconPosition='center'}} 

				{{else}}
					{{md-btn text='-' action='minusItem' class='col m6'
						isDisabled = true iconPosition='center'}} 
				{{/if}}


				<div {{action 'itemAnimation' this target=view}}>
					{{md-btn text='+' iconPosition='center' class='col m6 add_button'}}
				</div>

	 		</div>

				<div class="col m7  right-align product_price text_green product_title">
			 		P {{price}}
			 	</div>
	 	
	 	</div>
	 	<div class="row description">
    	{{{description}}}
    	</div>
   	</div>

</div>

{{#each product in model}}
{{product.title}}
{{/each}}