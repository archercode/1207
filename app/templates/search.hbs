
<div class ="container whole" >


<div class="search_header">

<div class=" page_title search text-uppercase text_green">
Search
</div>

  <form class="input-group container" {{action "search" on="submit"}}>
      {{input class="search form-control" placeholder="Search shop for ..." value=queryField}}
      <span class="input-group-btn"> 
        <button type="submit" class="search_button waves-light waves-effect btn">
          <div class="iconmelon" >
            <svg class="" viewBox="0 0 32 32">
              <use xlink:href="/icons.svg#search"></use>
            </svg> 
          </div>
        </button><!-- 
        <input type="submit" class="title search_button"/> -->
      </span>

    <!--   <input type="submit" class="title search_button waves-light waves-effect btn" value="Search"/> -->
  </form>

<!-- 
    {{input value=queryField}}
  {{md-btn text='Searcg'  action='search' class='col s4'
          isDisabled = false iconPosition='center'}} -->

</div>


      {{#if query}}
        <!-- <p>Displaying results for "{{query}}"</p> -->
        {{#if model}}
        <ul>
        <div class="row">
          {{#each model as |product|}}


         <!--  {{#link-to 'product' item.slug}}
            <li>{{item.title}}</li>
            {{/link-to}} -->
          
            <div class='col l4 '>
                <!-- {{#link-to 'product' product.slug}}<h2>{{product.title}}</h2>{{/link-to}} -->
                <div class='product_card'>
                  {{product-detail product=product addItem='addItem'}}  
                  <!-- <button>{{action "select" post target=view}}</button> -->
                    <div class="prod_cart_buttons row">

                  {{#if product.itemsCount}}
                    {{md-btn text='-' action='minusItem'  class='col s4'
                      isDisabled = false iconPosition='center'}}

                    <div class=" prod_cart_button_text col s4 center-align" >
                      {{product.itemsCount}}
                    </div>

                  {{else}}
                    {{md-btn text='-'  action='minusItem' class='col s4'
                      isDisabled = true iconPosition='center'}}

                    <div class=" prod_cart_button_text col s4 center-align">
                      BUY
                    </div>
                  {{/if}}

                    <div {{action 'itemAnimation' product target=view}}>
                      {{md-btn text='+'  iconPosition='center' class='col s4 add_button'}}
                    </div>

                  </div>
                </div>
              </div>




          {{/each}}
        </div>
        </ul>
        {{else}}
        No results for {{queryField}}
        {{/if}}


      {{/if}}






</div>